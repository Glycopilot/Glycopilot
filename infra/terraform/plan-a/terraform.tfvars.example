# Example terraform.tfvars for Plan A
# Copy this file to terraform.tfvars and update with your values
# NEVER commit terraform.tfvars to version control!

# AWS Configuration
aws_region = "eu-west-3"

# EC2 Configuration
instance_type  = "t3.micro"
key_pair_name  = "glycopilot-key-pair"

# SECURITY: Restrict SSH access to your IP only!
# Find your IP: curl ifconfig.me
ssh_allowed_cidr = "0.0.0.0/0"  # ⚠️ CHANGE THIS TO YOUR IP! Example: "203.0.113.0/32"

# Network Configuration
vpc_cidr_block           = "10.0.0.0/16"
public_subnet_cidr_block = "10.0.1.0/24"
availability_zone        = "eu-west-3a"

# Project Configuration
project_name = "glycopilot"
environment  = "production"
