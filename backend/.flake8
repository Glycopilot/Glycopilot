[flake8]
max-line-length = 88
extend-ignore = E203, W503, E402, E501, W291, W293, E302, E303, E305, E261, F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .pytest_cache,
    build,
    dist,
    staticfiles
per-file-ignores =
    __init__.py:F401
    asgi.py:E402
    wsgi.py:E402
    settings.py:F401
    */tests.py:F401,F841
    */test_*.py:F401,F841

